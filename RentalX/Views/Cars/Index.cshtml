@model IEnumerable<RentalX.Models.Car>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["PageTitle"]</h2>

<table id="cars" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Model</th>
            <th>Make</th>
            <th>Class</th>
            <th>Mileage</th>
            <th>Cost/Day</th>
        </tr>
    </thead>
    @foreach(var car in Model)
    {
        <tr>
            <td>@car.CarModel</td>
            <td>@car.Make.Name</td>
            <td>@car.CarClass.Name</td>
            <td>@car.CarMileage</td>
            <td>@car.CostPerDay</td>
        </tr>
    }
</table>
