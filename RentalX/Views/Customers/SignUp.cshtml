@model RentalX.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign Up</h2>

@using (Html.BeginForm("SaveNewCustomer", "Customers"))
{
    @Html.AntiForgeryToken()
    <h4> Create a new account.</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @*FirstName*@
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    @*Last Name*@
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })

    </div>
    @*Email*@
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

    </div>
    @*Birthdate - TODO: change to calender*@
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })
    </div>
    @*Phone Number*@
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>
    @*Driving License*@
    <div class="form-group">
        @Html.LabelFor(m => m.DrivingLicenseNumber, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.DrivingLicenseNumber, new { @class = "form-control" })
    </div>
    @*Password*@
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    @*Confirm Password*@
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
